<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Cellphone</th>
      <th>Role</th>
      <th>Cpf</th>
      <th>Institution</th>
      <th>Qtd. de SAV</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.cellphone %></td>
        <td><%= user.role %></td>
        <td><%= user.cpf %></td>
        <td><%= user.institution_id %></td>
        <td><%= user.classrooms.count %></td>
        <td><%= link_to 'Exibir', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Apagar', user, method: :delete, data: { confirm: 'Você tem certeza que deseja apagar este usuário?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

